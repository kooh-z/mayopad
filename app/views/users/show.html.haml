- provide(:title, @user.name)
.row
  %aside.col-md-4
    %section
      %h1
        = gravatar_for @user
        = @user.name
    %section.stats
      = render 'shared/stats'
  .col-md-8
    = render 'follow_form' if logged_in?
    - if @user.posts.any?
      %h3
        Posts (#{@user.posts.count})
      %ol.posts
        = render @posts
      = will_paginate @posts
